<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <include layout="@layout/frame_loading"
        android:visibility="gone"/>

    <include layout="@layout/frame_loading_error"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:id="@+id/explore_area_name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textAlignment="center"/>

    <include
        layout="@layout/badge_proloco"
        android:visibility="gone" />

    <include
        layout="@layout/badge_viasacra"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textview_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.2"
        android:text="Lorem ipsum dolor sit amet."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16sp"
        android:paddingTop="5dp"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btn_find_places"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_menu_button"
        android:text="Scopri i luoghi"
        android:textColor="#fff"
        android:textSize="16dp" />

</LinearLayout>

</ScrollView>